{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "color-hex-length": "long",
    "indentation": 2,
    "selector-class-pattern": null,
    "string-quotes": "single",
    "rule-empty-line-before": [
      "always",
      {
        "ignore": ["after-comment", "first-nested", "inside-block"]
      }
    ]
  }
}
